<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<PlatformTarget>x64</PlatformTarget>
		<!-- Define si es compatible con x64 o x86 -->
		<OutputType>Exe</OutputType>
		<!-- Cambia de Library a Exe para ejecutar el Main -->
	</PropertyGroup>

	<!-- Incluir las librerías nativas según el sistema operativo -->
	<ItemGroup>
		<!-- Copiar solo el archivo DLL directamente -->
		<None Include="libvictor.dll" Condition="'$(OS)' == 'Windows_NT'">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>


	<!-- Acción después de la construcción -->
	<Target Name="PostBuild" AfterTargets="Build">
		<Exec Command="echo Verificando si la DLL está copiada en la subcarpeta" />
		<Exec Command="dir $(OutDir)libvictor.dll" />
	</Target>


</Project>
